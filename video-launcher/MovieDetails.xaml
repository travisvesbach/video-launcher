<Page x:Class="video_launcher.MovieDetails"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:video_launcher"
      mc:Ignorable="d" 
      d:DesignHeight="300" d:DesignWidth="300"
      Title="MovieDetails" Background="Indigo" Foreground="White">

    <DockPanel>
        <DockPanel.Background>
            <ImageBrush ImageSource="{Binding Thumb}" Stretch="Fill" />
        </DockPanel.Background>
        <DockPanel>
            <DockPanel.Background>
                <SolidColorBrush Color="Black" Opacity=".80"/>
            </DockPanel.Background>
            <TextBlock DockPanel.Dock="Top" Text="{Binding MovieData.Title}" FontSize="46" TextAlignment="Center"/>
            <TextBlock DockPanel.Dock="Top" Text="{Binding MovieData.Year}" FontSize="36" TextAlignment="Center"/>
            <TextBlock DockPanel.Dock="Top" Text="{Binding MovieData.Tagline}" FontSize="36" TextAlignment="Center"/>
            <TextBlock DockPanel.Dock="Top" Text="{Binding MovieData.Plot}" FontSize="36" TextAlignment="Center" TextWrapping="Wrap"/>
            <Button DockPanel.Dock="Top" FontSize="36" Width="Auto" Click="OpenTrailer">Trailer</Button>
            
        </DockPanel>
    </DockPanel>
</Page>
